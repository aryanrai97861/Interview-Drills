# Example environment variables for interview-drills
# Copy to .env and fill values before running

# App
NODE_ENV=development
PORT=4000
BASE_URL=http://localhost:4000
WEB_BASE_URL=http://localhost:3000

# MongoDB
MONGO_URI=mongodb://mongo:27017/drillsdb

# Google OAuth (create these in Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# Cookie / Session
COOKIE_SECRET=replace-with-a-long-random-string
SESSION_COOKIE_NAME=sid
COOKIE_SECURE=false # set to true in production (requires https)

# Rate limiting & cache
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
CACHE_TTL_SECONDS=60

# Misc
LOG_LEVEL=info

# Note: when running in Docker compose, the BASE_URL should use the api service name
# e.g., for internal service-to-service calls: http://api:4000
