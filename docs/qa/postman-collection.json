{
  "info": {
    "name": "Interview Drills API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/health"
      }
    },
    {
      "name": "Get All Drills",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/drills"
      }
    },
    {
      "name": "Get Drill By ID",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/drills/:id"
      }
    },
    {
      "name": "Get Me (Auth Required)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Cookie",
            "value": "connect.sid={{session_cookie}}",
            "type": "text"
          }
        ],
        "url": "{{base_url}}/api/me"
      }
    },
    {
      "name": "Submit Attempt (Auth Required)",
      "request": {
      "method": "POST",
      "header": [
        { "key": "Content-Type", "value": "application/json", "type": "text" },
        { "key": "Cookie", "value": "{{session_cookie}}", "type": "text" }
      ],
      "body": {
        "mode": "raw",
        "raw": "{\n  \"drillId\": \"\",\n  \"answers\": [\"answer1\", \"answer2\", \"answer3\", \"answer4\", \"answer5\"]\n}"
      },
      "url": "{{base_url}}/api/attempts"
    } },
    { "name": "Get Last 5 Attempts (Auth Required)", "request": { "method": "GET", "header": [{ "key": "Cookie", "value": "{{session_cookie}}", "type": "text" }], "url": "{{base_url}}/api/attempts?limit=5" } }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:4000" },
    { "key": "session_cookie", "value": "" }
  ]
}